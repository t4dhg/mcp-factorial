{
  "name": "@t4dhg/mcp-factorial",
  "version": "3.0.0",
  "description": "The definitive MCP server for FactorialHR - Full CRUD operations for employees, teams, time off, projects, training, recruiting (ATS), and payroll. 80+ tools with safety guardrails.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-factorial": "dist/index.js"
  },
  "files": [
    "dist/",
    "README.md",
    "llms.txt"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "clean": "rm -rf dist coverage .vitest",
    "rebuild": "npm run clean && npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"*.json\" \"*.md\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"*.json\" \"*.md\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run test && npm run build",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "mcp-server",
    "factorial",
    "factorialhr",
    "factorial-hr",
    "hris",
    "hr",
    "hrm",
    "human-resources",
    "employee-management",
    "time-off",
    "attendance",
    "pto",
    "recruiting",
    "ats",
    "applicant-tracking",
    "training",
    "projects",
    "payroll",
    "claude",
    "claude-code",
    "anthropic",
    "ai",
    "llm",
    "ai-integration",
    "enterprise"
  ],
  "author": "Taig Mac Carthy <https://taigmaccarthy.com/>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/t4dhg/mcp-factorial.git"
  },
  "bugs": {
    "url": "https://github.com/t4dhg/mcp-factorial/issues"
  },
  "homepage": "https://github.com/t4dhg/mcp-factorial#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "dotenv": "^16.4.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.0",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9.17.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.18.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
